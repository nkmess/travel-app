.main__wrapper
  .freespace
    .freespace__content
      .freespace__sliderbox
        = image_tag "https://images.pexels.com/photos/1345191/pexels-photo-1345191.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260", class: "slider__panel"
        = image_tag "https://images.pexels.com/photos/33053/dog-young-dog-small-dog-maltese.jpg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260", class: "slider__panel"
      .freespace__sidebar
  .post__main
    = render partial: 'post', collection: @posts

  .post__main__btn
    = link_to new_post_path, class: "btn-floating btn-large waves-effect waves-light red" do
      %i.material-icons add

